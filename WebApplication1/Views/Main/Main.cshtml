
@{
    ViewData["Title"] = "Main";
}

@using WebApplication1.Models;
@model IEnumerable<WebApplication1.Models.Information>

 <a asp-action="addNew">Add new</a>

 <table class="table">
     <tr>
         <th>@Html.DisplayNameFor(model => model.Id)</th>
         <th>@Html.DisplayNameFor(model => model.Name)</th>
         <th>@Html.DisplayNameFor(model => model.Age)</th>
         <th>@Html.DisplayNameFor(model => model.Status)</th>
         <th></th>
     </tr>

     @if (Model != null)
     {
         foreach (var inf in Model)
         {
             <tr>
                 <td>@Html.DisplayFor(model => inf.Id)</td>
                 <td>@Html.DisplayFor(model => inf.Name)</td>
                 <td>@Html.DisplayFor(model => inf.Age)</td>
                 <td>@Html.DisplayFor(model => inf.Status)</td>
                 <td>
                     <a asp-action="Edit" asp-route-id="@inf.Id">Edit</a>
                     <a asp-action="Details" asp-route-id="@inf.Id">Details</a>
                     <a asp-action="Delete" asp-route-id="@inf.Id">Delete</a>
                 </td>
             </tr>
         }
     }





 </table>




